# ==========================================
# MongoDB Configuration
# ==========================================
# REQUIRED: MongoDB connection string
# For Docker: Ensure your MongoDB Atlas cluster allows connections from 0.0.0.0/0 (all IPs)
# or add your specific public IP in MongoDB Atlas Network Access settings
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/email-sorter?retryWrites=true&w=majority

# ==========================================
# Server Configuration
# ==========================================
NODE_ENV=production
PORT=5000

# ==========================================
# Frontend URL
# ==========================================
# URL where the frontend is hosted
CLIENT_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# For production React app
REACT_APP_API_URL=http://localhost:5000

# ==========================================
# Google OAuth Configuration
# ==========================================
# REQUIRED: Get these from Google Cloud Console
# https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# ==========================================
# Claude AI Configuration
# ==========================================
# REQUIRED: Get API key from https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-api03-your-claude-api-key

# AI model to use (default: claude-sonnet-4-5)
AI_MODEL=claude-sonnet-4-5

# ==========================================
# Security Configuration
# ==========================================
# REQUIRED: Change these in production!
# Generate random secrets: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# JWT token expiration (default: 7d)
JWT_EXPIRE=7d

# ==========================================
# Email Processing Configuration
# ==========================================
# Maximum number of emails to sync per batch (default: 50)
MAX_EMAILS_PER_SYNC=50

# Email sync interval in milliseconds (default: 3600000 = 1 hour)
EMAIL_SYNC_INTERVAL=3600000

# ==========================================
# Rate Limiting Configuration
# ==========================================
# Rate limit window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100
